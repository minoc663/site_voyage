{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Traveling
{% endblock %}

{% block body %}
	<h1 class="text-center">Bienvenue sur Traveling</h1>
	<!-- about -->
	<div id="about" class="about">
		<div class="container">
			<div class="row">
				<div class="col-md-12 ">
					<div class="titlepage">
						<h2>Qui sommes-nous ?</h2>
					</div>
				</div>
			</div>
		</div>
		<div class="bg">
			<div class="container">
				<div class="row">
					<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
						<div class="about-box">
							<p>
								<span>
							Nous sommes une agence de voyage qui vous vends du rêve.<br>
							Vous êtes sur le point de partir pour une destination qui vous enchantera.<br>
							Nous vous proposons des vols à bon prix et des hébergements idéalement situés.</span>
							</p>
							<div class="plane-img-area">
								<img src="uploads/picture/plane-img.png" alt="images">
							</div>
						</div>
					</div>
				</div>
			</div>
			<a href="#">Découvrir</a>
		</div>
	</div>
	<!-- end about -->	
	<!-- traveling -->
	<div id="travel" class="traveling">
		<div class="container">
			<div class="row">
				<div class="col-md-12 ">
					<div class="titlepage">
						<h2>Sélections de voyages</h2>
						<span>Voici quelques propositions de voyages.</span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
					<div class="traveling-box">
						<i><img src="icon/travel-icon.png" alt="icon"/></i>
						<h3>Différents Pays</h3>
						<p>
							choisissez le pays qui vous fais rêver et allez-y
 						</p>
						<div class="read-more">
							<a href="#">Voir les détails</a>
						</div>
					</div>
				</div>
				<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
					<div class="traveling-box">
						<i><img src="icon/travel-icon2.png" alt="icon"/></i>
						<h3>Escursions en montagne</h3>
						<p>
							De la petite ballade au treck sportif, allez-y !
						</p>
						<div class="read-more">	
							<a href="#">Voir les détails</a>
						</div>
					</div>
				</div>
				<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
					<div class="traveling-box">
						<i><img src="icon/travel-icon3.png" alt="icon"/></i>
						<h3>Tours en bus</h3>
						<p>
							Vous verrez du pays à bord de nos bus. Embarquement.
						</p>
						<div class="read-more">
							<a href="#">Voir les détails</a>
						</div>
					</div>
				</div>
				<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
					<div class="traveling-box">
						<i><img src="icon/travel-icon4.png" alt="icon"/></i>
						<h3>Eté détente</h3>
						<p>
							Emportez votre serviette et nous nous occupons du reste. Plouf.
						</p>
						<div class="read-more">
							<a href="#">Voir les détails</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end traveling -->
	
	<h1 class="text-center">Nos meilleurs propositions</h1>
<section class="py-5">
	<div class="container px-4 px-lg-5 mt-5">
		<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

			{% for hebergement in hebergements %}
				<div class="card" style="width: 30rem; height: 30rem;">
					<div
						class="card-body">
						<!-- hebergement image-->
						<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="width: 25rem; height: 10rem;">
							<div class="carousel-inner">
								<div class="carousel-item active">
									<img src="{{asset('uploads/picture/' ~ hebergement.illustration) }}" class="d-block w-100" style="width: max-content; height: auto; ">
								</div>
								<div class="carousel-item">
									<img src="{{asset('uploads/picture/' ~ hebergement.illustration2) }}" class="d-block w-100" style="width: max-content; height: auto; ">
								</div>
								<div class="carousel-item">
									<img src="{{asset('uploads/picture/' ~ hebergement.illustration3) }}" class="d-block w-100" style="width: max-content; height: auto; ">
								</div>
							</div>

						</div>
						<!-- hebergement details-->
						<div class="card-body" style="width: 25rem; height: 10rem; margin-top: 5rem;">
							<h5 class="card-title">{{hebergement.nom}}</h5>
							<p class="card-text">{{ hebergement.description | length > 50 ? hebergement.description | slice(0, 50) ~ '...' : hebergement.description }}</p>
							<div
								class="card-footer p-4 pt-0 border-top-0 bg-transparent">
								<!-- hebergement price-->
								{{hebergement.prix}}€/nuit
								<!-- hebergement actions-->
								<div class="text-center">
									<a class="btn btn-outline-dark mt-auto" href="{{path('single_hebergement',{'id':hebergement.id})}}">Détails</a>
								</div>
							</div>
						</div>
					</div>
				</div>

			{% endfor %}


		</div>
	</div>
</section>

<section class="row d-flex justify-content-center text-center">
	{% for vol in vols %}
		<div class="card m-1" style="width: 18rem;">

			<div class="card-body">
				<h3 class="card-title">{{ vol.lieuDepart }}
					->
					{{ vol.lieuArrivee }}</h3>
				<h4 lass="card-text">{{ vol.compagnie }}</h4>
				<p class="card-text">
					<strong>Date de départ :
					</strong>
					{{ vol.dateDepart | date("d/m/Y") }}</p>
				<p class="card-text">
					<strong>Heurede départ :
					</strong>
					{{ vol.dateDepart | date("H\\hi") }}</p>
				<p class="card-text">
					<strong>Heure d'arrivée :
					</strong>
					{{ vol.dateArrivee | date("H\\hi") }}</p>
				<a href="{{ path('vol_detail', {id: vol.id} ) }}" class="btn btn-info">Detail</a>
				<a href="{{path('add_to_cart', {id: vol.id} ) }}" class="btn btn-primary">Reservez</a>
			</div>
		</div>


	{% endfor %}
</section>





{% endblock %}
