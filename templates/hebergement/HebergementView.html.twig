{% extends 'base.html.twig' %}

{% block title %}Hébergements{% endblock %}

{% block body %}
<header class="bg-light py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-black">
            <h1 class="display-4 fw-bolder">Hébergement</h1>
            <p class="lead fw-normal text-black-50 mb-0">Louer un hébergement</p>
        </div>
    </div>
</header>
fgh
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            {% for hebergement in hebergements %}
            <div class="card" style="width: 30rem; height: 30rem;">
                <div class="card-body">
                        <!-- hebergement image-->
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="width: 25rem; height: 10rem;">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="{{asset('uploads/picture/' ~ hebergement.illustration) }}" class="d-block w-100" style="width: max-content; height: auto; ">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{asset('uploads/picture/' ~ hebergement.illustration2) }}" class="d-block w-100" style="width: max-content; height: auto; ">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{asset('uploads/picture/' ~ hebergement.illustration3) }}" class="d-block w-100" style="width: max-content; height: auto; ">
                                </div>
                            </div>
                            
                        </div>
                        <!-- hebergement details-->
                    <div class="card-body" style="width: 25rem; height: 10rem; margin-top: 5rem;">
                        <h5 class="card-title">{{hebergement.nom}}</h5>
                        <p class="card-text">{{ hebergement.description | length > 50 ? hebergement.description | slice(0, 50) ~ '...' : hebergement.description }}</p>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <!-- hebergement price-->
                            {{hebergement.prix}}€/nuit
                            <!-- hebergement actions-->
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto" href="{{path('single_hebergement',{'id':hebergement.id})}}">Détails</a>
                                </div>
                        </div>
                    </div>
                </div>
            </div>

                        {% endfor %}



        </div>
    </div>
</section>
{% endblock %}