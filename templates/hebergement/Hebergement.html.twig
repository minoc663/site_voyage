{% extends 'base.html.twig' %}

{% block title %}Hébergements{% endblock %}

{% block body %}
<header class="bg-light py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-black">
            <h1 class="display-4 fw-bolder">Hébergement</h1>
            <p class="lead fw-normal text-black-50 mb-0">Louer un hébergement</p>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            {% for hebergement in hebergements %}
            <div class="card countainer">
                <div class="card" style="width: 18rem; height:36rem">
                        <!-- hebergement image-->
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="{{hebergement.illustration}}" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{hebergement.illustration}}" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{hebergement.illustration}}" class="d-block w-100" alt="...">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                        <!-- hebergement details-->
                    <div class="card-body" style="width: 20rem; height:40rem">
                        <h5 class="card-title">{{hebergement.nom}}</h5>
                        <p class="card-text">{{ hebergement.description | length > 50 ? hebergement.description | slice(0, 50) ~ '...' : hebergement.description }}</p>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <!-- hebergement price-->
                            {{hebergement.prix}}€/nuit
                            <!-- hebergement actions-->
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto" href="{{path('single_hebergement',{'id':hebergement.id})}}">Détails</a>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Sale badge-->
                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Réserver
                    </div>
                    <!-- hebergement image-->
                    <img class="card-img-top" src="{{hebergement.illustration}}" alt="..." />
                    <!-- hebergement details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- hebergement name-->
                            <h5 class="fw-bolder">{{hebergement.nom}}</h5>
                            <!-- hebergement reviews-->
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                            </div>
                            <!-- hebergement price-->
                            
                            {{hebergement.prix}}€/nuit
                        </div>
                    </div>
                    <!-- hebergement actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <a class="btn btn-outline-dark mt-auto" href="{{path('single_hebergement',{'id':hebergement.id})}}">Détails</a>
                        </div>

                    
                </div>
            </div>

            {% endfor %}



        </div>
    </div>
</section>
{% endblock %}
