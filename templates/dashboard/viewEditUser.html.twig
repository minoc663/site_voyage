{% extends 'base.html.twig' %}

{% block title %}Espace Administrateur!{% endblock %}

{% block body %}

<div class="container">
    <h2 class="text-center">Mes membres</h2>
    <a href="{{path('add_user')}}" class="btn mb-2 mb-md-0 btn-outline-secondary btn-block">Ajouter un membre</a>
    <table class="table table-hover mt-2">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Rôle</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <th>{{user.id}}</th>
                <td>{{user.prenom}}</td>
                <td>{{user.nom}}</td>
                <td>{{user.email}}</td>
                <td>{{user.role}}</td>
                <td>
                    <a href="{{path('edit_user',{'id': user.id})}}"><i style="color: black;" class="fa fa-edit"></i></a> |
                    <a href="{{path('delete_user',{'id': user.id})}}"><i style="color: black;" class="fa fa-trash"></i></a>
                </td>

            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endblock %}